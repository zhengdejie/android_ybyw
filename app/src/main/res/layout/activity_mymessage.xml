<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        android:id="@+id/title_bar"
        layout="@layout/titlebar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/divide"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dip"
        >
        <TextView
            android:id="@+id/tv_systemmessage"
            style="@style/more_item_style"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:drawableRight="@drawable/aliwx_arrow"
            android:text="系统通知" />
        <TextView
            android:id="@+id/tv_smunread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/aliwx_unread_hint"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/aliwx_unread_text_size"
            android:visibility="invisible"
            android:gravity="center"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/divide"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dip"
        >
        <TextView
            android:id="@+id/tv_ordermessage"
            style="@style/more_item_style"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:drawableRight="@drawable/aliwx_arrow"
            android:text="订单通知" />
        <TextView
            android:id="@+id/tv_omunread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/aliwx_unread_hint"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/aliwx_unread_text_size"
            android:visibility="invisible"
            android:gravity="center"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/divide"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dip"
        >
        <TextView
            android:id="@+id/tv_friendmessage"
            style="@style/more_item_style"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:drawableRight="@drawable/aliwx_arrow"
            android:text="好友通知" />
        <TextView
            android:id="@+id/tv_fmunread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/aliwx_unread_hint"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/aliwx_unread_text_size"
            android:visibility="invisible"
            android:gravity="center"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/divide"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dip"
        >
        <TextView
            android:id="@+id/tv_recentcontacter"
            style="@style/more_item_style"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:drawableRight="@drawable/aliwx_arrow"
            android:text="最近联系人" />
        <TextView
            android:id="@+id/tv_rcunread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/aliwx_unread_hint"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/aliwx_unread_text_size"
            android:visibility="invisible"
            android:gravity="center"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/divide"
        />


</LinearLayout>