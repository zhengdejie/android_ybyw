        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            >

            <RelativeLayout
                android:id="@+id/frame_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/more_bg_p"/>

                <TextView
                    android:id="@+id/tv_ubang"
                    style="@style/tab_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/homegray"
                    android:gravity="center"
                    android:text="友帮"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/tab_normal_color" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/frame_forum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1.0" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/more_bg_p"/>

                <TextView
                    android:id="@+id/tv_myorder"
                    style="@style/tab_text_style"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:drawableTop="@drawable/ordergray"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="订单"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/tab_normal_color"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/more_bg_p"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1.0" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/more_bg_p"/>
                <TextView
                    android:id="@+id/tv_discovery"
                    style="@style/tab_text_style"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:drawableTop="@drawable/discoverygray"
                    android:gravity="center"
                    android:text="发现"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/tab_normal_color" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0" >

                <!--<RelativeLayout-->
                <!--android:layout_width="0dip"-->
