<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="@color/white"
                android:descendantFocusability="blocksDescendants"
              >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:id="@+id/ll_tb">
        <include
            android:id="@+id/title_bar"
            layout="@layout/titlebar" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lly_send"
        android:layout_below="@+id/ll_tb"
        android:fillViewport="true"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:text="名字"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_toRightOf="@+id/iv_avatar"
                    android:layout_marginLeft="10dp"/>

                <RatingBar
                    android:id="@+id/rb_totalvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:numStars="5"
                    android:isIndicator="true"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_below="@+id/tv_name"
                    android:layout_toRightOf="@+id/iv_avatar"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:id="@+id/imgbtn_call"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/phone"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentRight="true"/>

                <ImageView
                    android:id="@+id/imgbtn_conversation"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/mymessage"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/imgbtn_call"/>

                <View
                    android:layout_width="3dp"
                    android:layout_height="80dp"
                    android:layout_toRightOf="@+id/tv_name"
                    android:background="@color/bg_gray"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/tv_title"
                    android:text="主题"
                    android:textSize="20sp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/tv_money"
                    android:lines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="类别"
                    android:layout_below="@+id/tv_title"
                    android:textColor="@color/font_gray"
                    android:layout_toLeftOf="@+id/tv_paymethod"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/tv_location"
                    android:text="地址"
                    android:layout_below="@+id/tv_type"
                    android:textColor="@color/font_gray"
                    />

                <!--<TextView-->
                    <!--android:id="@+id/tv_tags"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="20dp"-->
                    <!--android:text="标签"-->
                    <!--android:layout_below="@+id/tv_location"-->
                    <!--android:textColor="@color/font_gray"-->
                    <!--android:background="@drawable/textview_tag"-->
                    <!--/>-->
                <appframe.appframe.widget.tagview.TagView
                    android:id="@+id/tv_tags"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:lineMargin="5dp"
                    app:tagMargin="3dp"
                    app:textPaddingBottom="3dp"
                    app:textPaddingLeft="10dp"
                    app:textPaddingRight="10dp"
                    app:textPaddingTop="3dp"
                    android:layout_below="@+id/tv_location"
                    android:visibility="gone"
                    />
                <GridView
                    android:id="@+id/gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:horizontalSpacing="3dp"
                    android:numColumns="3"
                    android:scrollbars="none"
                    android:verticalSpacing="5dp"
                    android:layout_below="@+id/tv_tags"
                    android:visibility="gone"
                    >
                </GridView>
                <!--<ImageView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="250dp"-->
                    <!--android:src="@drawable/ic_launcher"-->
                    <!--android:layout_below="@+id/tv_tags"/>-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/tv_money"
                    android:text="￥1.00"
                    android:layout_alignParentRight="true"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tv_paymethod"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="线上支付"
                    android:layout_below="@+id/tv_money"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/tv_cont"
                    android:text="内容"
                    android:textSize="20sp"
                    android:lines="1"
                    android:ellipsize="end"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_content"
                    android:text="内容"

                    android:layout_below="@+id/tv_cont"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/tv_dead"
                    android:text="截止日期"
                    android:textSize="20sp"
                    android:lines="1"
                    android:ellipsize="end"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_deadline"
                    android:text="2015-05-12 12:15:15"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_below="@+id/tv_dead"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/tv_req"
                    android:text="接单人要求"
                    android:textSize="20sp"
                    android:lines="1"
                    android:ellipsize="end"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_require"
                    android:text="内容"
                    android:lines="3"
                    android:ellipsize="end"
                    android:layout_below="@+id/tv_req"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_gray"/>
            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:text="留言"
                style="@style/more_item_style"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_gray"/>
            <!--<ScrollView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="120dp">-->
                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content">-->

            <!--<ListView-->
                <!--android:id="@+id/lv_ordercomment"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"/>-->
            <ListView
                android:id="@+id/lv_ordercomment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
                <!--<appframe.appframe.widget.swiperefresh.SwipeRefreshX-->
                    <!--android:id="@+id/swipeRefresh"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->

                    <!-->-->
                    <!--<ListView-->
                        <!--android:id="@+id/lv_ordercomment"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"/>-->
                <!--</appframe.appframe.widget.swiperefresh.SwipeRefreshX>-->

                <!--</LinearLayout>-->
            <!--</ScrollView>-->
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/lly_send">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="留言"
            android:id="@+id/btn_comment"
            android:layout_gravity="bottom"
            android:layout_weight="5"
            android:background="@drawable/textview_clicked"
            android:textColor="@drawable/textview_pressed"
            android:layout_margin="5dp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="我要接单"
            android:id="@+id/btn_select"
            android:layout_gravity="bottom"
            android:layout_weight="3"
            android:background="@drawable/textview_clicked"
            android:textColor="@drawable/textview_pressed"
            android:layout_margin="5dp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="推荐朋友接单"
            android:id="@+id/btn_recommend"
            android:layout_gravity="bottom"
            android:layout_weight="4"
            android:background="@drawable/textview_clicked"
            android:textColor="@drawable/textview_pressed"
            android:layout_margin="5dp"
            android:gravity="center"
            />

    </LinearLayout>




</RelativeLayout>