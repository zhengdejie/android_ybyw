<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        android:id="@+id/title_bar"
        layout="@layout/titlebar" />

    <TextView
        android:id="@+id/tv_hcenter"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"/>

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/iv_myavatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/title_bar"
        android:layout_toLeftOf="@+id/tv_hcenter"
        android:layout_marginTop="10dp"
        android:src="@drawable/default_avatar"
        />
    <TextView
        android:id="@+id/tv_myname"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_myavatar"
        android:text="mynamesdfsdfsdfdsdsdsssssssssssssss"
        android:layout_alignRight="@+id/iv_myavatar"
        android:textSize="14sp"
        android:lines="1"
        android:gravity="center"
        android:ellipsize="end"
        />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/iv_youravatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/title_bar"
        android:layout_toRightOf="@+id/tv_hcenter"
        android:layout_marginTop="10dp"
        android:src="@drawable/default_avatar"
        />

    <TextView
        android:id="@+id/tv_yourname"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_youravatar"
        android:text="youname"
        android:layout_alignRight="@+id/iv_youravatar"
        android:textSize="14sp"
        android:lines="1"
        android:gravity="center"
        android:ellipsize="end"
        />

    <View
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:background="@color/green"
        android:layout_alignBottom="@+id/iv_myavatar"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/view9" />

    <TextView
        android:id="@+id/tv_relation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view9"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/view_divide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray"
        android:layout_below="@+id/tv_myname"
        android:layout_marginTop="10dp"/>

    <GridView
        android:id="@+id/gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:horizontalSpacing="5dp"
        android:numColumns="4"
        android:scrollbars="none"
        android:verticalSpacing="5dp"
        android:layout_below="@+id/view_divide"
        android:layout_marginTop="10dp"
        android:gravity="center">
    </GridView>

</RelativeLayout>