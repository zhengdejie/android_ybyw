<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_launcher"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="17sp"
                android:text="昵称" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:text="标题"/>

            <ImageView
                android:id="@+id/star"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:src="@drawable/star5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                >

                <TextView
                    android:id="@+id/txt_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_weight="1"
                    android:text="类别"/>


                <TextView
                    android:id="@+id/txt_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:text="地址" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/font_gray"
                android:text="08-04 8:30"/>

            <TextView
                android:id="@+id/txt_bounty"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="20dp"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/divide"
    />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="44dip"
    android:orientation="horizontal">
    <RelativeLayout
    android:id="@+id/ll_receiver"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="5dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_serviceprovider"
            android:text="服务方:"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tv_showserviceprovider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_alignTop="@+id/tv_serviceprovider"
            android:layout_toRightOf="@+id/tv_serviceprovider"
            android:layout_toEndOf="@+id/tv_serviceprovider"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_servicereceiver"
            android:text="被服务方:"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_showservicereceiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_servicereceiver"
            android:layout_toEndOf="@+id/tv_servicereceiver"/>
    </RelativeLayout>
</LinearLayout>
