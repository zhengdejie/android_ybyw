        <!--android:layout_alignBottom="@+id/niv_avatar"-->
        <!--android:layout_toRightOf="@+id/niv_avatar"-->
        <!--android:layout_toEndOf="@+id/niv_avatar" />-->


    </RelativeLayout>

</LinearLayout>