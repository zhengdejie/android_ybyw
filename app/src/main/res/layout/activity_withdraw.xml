    <TextView
        android:id="@+id/payway"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="提现方式"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:background="@color/divide"
        android:layout_below="@+id/title_bar"
        />

    <TextView
        android:id="@+id/tv_alipay"
        style="@style/more_item_style"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:text="@string/ali"
        android:layout_below="@+id/payway"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide"
        android:layout_below="@+id/tv_alipay"
        />

    <TextView
        android:id="@+id/tv_weixing"
        style="@style/more_item_style"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:text="@string/weixing"
        android:layout_below="@+id/view2"/>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/divide"
        android:layout_below="@+id/tv_weixing"
        />

    <TextView
        android:id="@+id/tv_yb"
        style="@style/more_item_style"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="到账时间"
        android:layout_below="@+id/view3"/>

    <TextView
        style="@style/more_item_style"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="1-2个工作日到账，节假日顺延"
        android:layout_alignRight="@+id/tv_yb"
        android:textColor="@color/font_gray"
        android:layout_below="@+id/view3"/>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/divide"
        android:layout_below="@+id/tv_yb"
        />

    <TextView
        android:id="@+id/tv_withdraw"
        style="@style/more_item_style"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="提现金额"
        android:layout_below="@+id/view4"/>

    <EditText
        android:id="@+id/et_amount"
        style="@style/more_item_style"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:hint="输入提现金额"
        android:inputType="numberDecimal"
        android:layout_alignRight="@+id/tv_yb"
        android:textColor="@color/font_gray"
        android:layout_below="@+id/view4"
        android:background="@color/white"/>

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide"
        android:layout_below="@+id/tv_withdraw"
        />

    <TextView

        style="@style/more_item_style"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="可提现金额"
        android:layout_below="@+id/view5"/>

    <TextView
        android:id="@+id/tv_yuer"
        style="@style/more_item_style"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignRight="@+id/tv_yb"
        android:textColor="@color/font_gray"
        android:layout_below="@+id/view5"/>

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide"
        android:layout_below="@+id/tv_yuer"
        />

    <TextView

        style="@style/more_item_style"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="姓名"
        android:layout_below="@+id/view6"/>

    <EditText
        android:id="@+id/et_name"
        style="@style/more_item_style"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:hint="输入姓名"
        android:layout_alignRight="@+id/tv_yb"
        android:textColor="@color/font_gray"
        android:layout_below="@+id/view6"
        android:background="@color/white"/>

    <View
        android:id="@+id/view7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide"
        android:layout_below="@+id/et_name"
        />
    <TextView

        style="@style/more_item_style"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="支付宝账号"
        android:layout_below="@+id/view7"/>

    <EditText
        android:id="@+id/et_account"
        style="@style/more_item_style"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:hint="输入支付宝账号"
        android:layout_alignRight="@+id/tv_yb"
        android:textColor="@color/font_gray"
        android:layout_below="@+id/view7"
        android:background="@color/white"/>

    <View
        android:id="@+id/view8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide"
        android:layout_below="@+id/et_name"
        />
