<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_bar"
        layout="@layout/titlebar" />


    <TextView
        android:id="@+id/payway"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="提现方式"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:background="@color/divide"
        android:layout_below="@+id/title_bar"
        />
    <TextView
        android:id="@+id/tv_account"
        style="@style/more_item_style"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="支付宝账号"
        android:layout_below="@+id/payway"/>

    <EditText
        android:id="@+id/et_account"
        style="@style/more_item_style"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="输入支付宝账号"
        android:layout_toRightOf="@+id/tv_account"
        android:textColor="@color/font_gray"
        android:layout_below="@+id/payway"
        android:background="@color/white"/>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide"
        android:layout_below="@+id/et_account"
        />
    <TextView
        android:id="@+id/tv_name"
        style="@style/more_item_style"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="姓名"
        android:layout_below="@+id/view1"/>

    <EditText
        android:id="@+id/et_name"
        style="@style/more_item_style"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="输入姓名"
        android:layout_toRightOf="@+id/tv_name"
        android:textColor="@color/font_gray"
        android:layout_below="@+id/view1"
        android:background="@color/white"/>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/divide"
        android:layout_below="@+id/et_name"
        />
    <TextView
        android:id="@+id/tv_yue"
        style="@style/more_item_style"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="可提现金额"
        android:layout_below="@+id/view2"/>

    <TextView
        android:id="@+id/tv_yuer"
        style="@style/more_item_style"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textColor="@color/font_gray"
        android:layout_toRightOf="@+id/tv_yue"
        android:layout_below="@+id/view2"/>
    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/divide"
        android:layout_below="@+id/tv_yuer"
        />
    <TextView
        android:id="@+id/tv_withdraw"
        style="@style/more_item_style"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="提现金额"
        android:layout_below="@+id/view3"/>

    <EditText
        android:id="@+id/et_amount"
        style="@style/more_item_style"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="输入提现金额,最低 ￥100.00"
        android:inputType="numberDecimal"
        android:layout_toRightOf="@+id/tv_withdraw"
        android:textColor="@color/font_gray"
        android:layout_below="@+id/view3"
        android:background="@color/white"/>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide"
        android:layout_below="@+id/et_amount"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view4"
        android:text="提示: 自动扣除提现金额3%的手续费，3-10个工作日之内到账"
        android:layout_margin="10dp"/>
