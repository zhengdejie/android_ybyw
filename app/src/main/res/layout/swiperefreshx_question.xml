<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_item_pressed"
    android:descendantFocusability="blocksDescendants"
    android:padding="10dp"
    >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/niv_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:text="标题标题标题标"
        android:lines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/iv_avatar"
        android:layout_toLeftOf="@+id/txt_bounty"
        android:layout_alignTop="@+id/iv_avatar" />

    <TextView
        android:id="@+id/txt_bounty"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:textSize="16sp"
        android:text="￥0.01"/>

    <ImageView
        android:id="@+id/iv_gender"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/txt_title"
        android:layout_toRightOf="@+id/iv_avatar"
        android:src="@drawable/male"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:text="名字"
        android:layout_below="@+id/txt_title"
        android:layout_toRightOf="@+id/iv_gender"
        android:gravity="center_vertical"
        android:lines="1"
        android:ellipsize="end"
        />

    <RatingBar
        android:id="@+id/rb_totalvalue"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:numStars="5"
        android:isIndicator="true"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_below="@+id/txt_title"
        android:layout_toRightOf="@+id/tv_name"
        />


    <TextView
        android:id="@+id/tv_numofconforder"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="(友帮了1次)"
        android:lines="1"
        android:ellipsize="end"
        android:layout_below="@+id/txt_title"
        android:layout_toRightOf="@+id/rb_totalvalue"
        android:gravity="center_vertical"
        android:textColor="@color/font_gray"/>

    <TextView
        android:id="@+id/tv_pay"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:text="已赏"
        android:layout_below="@+id/txt_bounty"
        android:textColor="@color/font_gray"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:lines="2"
        android:ellipsize="end"
        android:text="内容"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_avatar"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/tv_answerunm"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:lines="1"
        android:ellipsize="end"
        android:text="1条回答"
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_avatar"
        android:gravity="center_vertical"
        android:textSize="12sp"
        android:textColor="@color/font_gray"/>
    <GridView
        android:id="@+id/gridview"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:scrollbars="none"
        android:verticalSpacing="5dp"
        android:layout_below="@+id/tv_answerunm"
        android:listSelector="@android:color/transparent"
        android:layout_toRightOf="@+id/iv_avatar"
        android:focusable="false"/>

