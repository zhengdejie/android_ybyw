<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_bar"
        layout="@layout/titlebar" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_bar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ll_person"
                android:background="@drawable/demo_setting_single_bg"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                >

                <appframe.appframe.utils.CircleImageViewCustomer
                    android:id="@+id/iv_avater"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/iv_avater"
                    android:gravity="center"
                    android:layout_marginLeft="15dp">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="帅哥"
                        android:textSize="20sp"
                        android:gravity="left|center"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp"
                        />
                    <ImageView
                        android:id="@+id/iv_sex"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/male"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_toRightOf="@+id/tv_name"
                        />
                    <ImageView
                        android:id="@+id/iv_member"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/idflag"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_toRightOf="@+id/iv_sex"/>
                    <!--<ImageView-->
                        <!--android:id="@+id/iv_vip"-->
                        <!--android:layout_width="20dp"-->
                        <!--android:layout_height="20dp"-->
                        <!--android:src="@drawable/idflag"-->
                        <!--android:layout_gravity="center_vertical"-->
                        <!--android:layout_toRightOf="@+id/iv_member"/>-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="友帮号:"
                        android:textSize="16sp"
                        android:gravity="left|center"
                        android:id="@+id/tv_tel"
                        android:textColor="#808080"
                        android:layout_below="@+id/tv_name"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/jiantou"
                    android:layout_marginRight="20dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divide"
                />

            <LinearLayout
                android:id="@+id/ll_wallet"
                android:background="@drawable/demo_setting_single_bg"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:orientation="vertical"
                   android:gravity="center"
                   >
                    <TextView
                        android:id="@+id/tv_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/my_ic_balance"
                        android:text="  余额： "
                        android:gravity="center"
                        />
               </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divide"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                   <TextView
                       android:id="@+id/tv_income"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:drawableLeft="@drawable/my_ic_income"
                       android:text="  总收益： "
                       android:gravity="center"
                       android:layout_toRightOf="@+id/view1"
                       android:layout_marginBottom="5dp"
                       />
                   <TextView
                       android:id="@+id/tv_consume"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:drawableLeft="@drawable/my_ic_consume"
                       android:text="  总消费： "
                       android:gravity="center"
                       android:layout_below="@+id/tv_income"
                       android:layout_toRightOf="@+id/view1"/>

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/divide"
                />

            <TextView
