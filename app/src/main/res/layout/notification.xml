<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/logo"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/iv_logo"
        android:layout_toLeftOf="@+id/tv_time"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:text="dfdfddddddddddfddddddddddfddddddddddfddddddddd"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="2012-03-02"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="dfddddddddfddddddddddfddddddddddfddddddddddfdddddddddfddddddddddfdddddddddddfddddddddddfdddddddddddfddddddddddfddddddddddddd"
        android:gravity="center_vertical"
        android:layout_below="@+id/tv_title"
        android:layout_toRightOf="@+id/iv_logo"
        android:layout_marginRight="10dp"
        android:textColor="@color/font_gray"
        android:maxLines="2"
        android:ellipsize="end"/>
</RelativeLayout>