<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_item_pressed">

    <TextView
        android:id="@+id/tv_hcenter"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"/>

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/iv_myavatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/default_avatar"
        />
    <TextView
        android:id="@+id/tv_myname"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="名字"
        android:layout_toRightOf="@+id/iv_myavatar"
        android:layout_alignTop="@+id/iv_myavatar"
        android:textSize="14sp"
        android:lines="1"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="标题"
        android:layout_toRightOf="@+id/iv_myavatar"
        android:layout_below="@+id/tv_myname"
        android:textSize="14sp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_toLeftOf="@+id/tv_time"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="2015-05-01"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:textSize="14sp"
        android:lines="1"
        android:ellipsize="end"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/tv_title"
        android:layout_toRightOf="@+id/iv_myavatar"
        android:layout_marginRight="10dp"
        android:background="@color/bg_gray">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_youravatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:src="@drawable/default_avatar"
            />
        <TextView
            android:id="@+id/tv_yourname"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="名字"
            android:layout_toRightOf="@+id/iv_youravatar"
            android:layout_alignTop="@+id/iv_youravatar"
            android:textSize="14sp"
            android:lines="1"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tv_yourtitle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="标题"
            android:layout_toRightOf="@+id/iv_youravatar"
            android:layout_below="@+id/tv_yourname"
            android:textSize="14sp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginRight="10dp"
            />

        </RelativeLayout>

</RelativeLayout>