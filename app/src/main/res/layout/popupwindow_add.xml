<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
                 android:orientation="vertical"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="right">


    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/item_popupwindows_scan"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/btn"
                android:textColor="@color/deep_gray"
                android:textSize="18sp"
                android:text="@string/scan"
                android:drawableLeft="@drawable/ic_search_black_24dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bg_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/item_popupwindows_send_require_order"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/btn"
                android:text="@string/send_require_order"
                android:textColor="@color/deep_gray"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_search_black_24dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/border_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/item_popupwindows_send_recommand_order"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/btn"
                android:text="@string/send_recommand_order"
                android:textColor="@color/deep_gray"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_search_black_24dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/border_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/item_popupwindows_search"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/btn"
                android:text="@string/search"
                android:textColor="@color/deep_gray"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_search_black_24dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout >